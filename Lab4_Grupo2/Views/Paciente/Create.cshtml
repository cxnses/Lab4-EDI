@model Lab4_Grupo2.Models.Paciente

<title>Ingreso paciente | HNGT</title>

<body>
    <div style="padding-left:50px; padding-right:50px;">
        <div style="padding-left:100px; padding-right:100px;">
            <br />
            <h4>Registro de pacientes</h4>
            <h6>Complete los datos que se presentan a continuación y espere a ser atendido.</h6>

            <hr />
            <div class="row">
                <br />
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nombres" class="control-label"></label>
                            <input asp-for="Nombres" class="form-control" />
                            <span asp-validation-for="Nombres" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Apellidos" class="control-label"></label>
                            <input asp-for="Apellidos" class="form-control" />
                            <span asp-validation-for="Apellidos" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FDNacimiento" class="control-label"></label>
                            <input asp-for="FDNacimiento" class="form-control" />
                            <span asp-validation-for="FDNacimiento" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sexo" class="control-label"></label>
                            <select asp-for="Sexo" class="form-control">
                                <option value="Masculino">Masculino</option>
                                <option value="Femenino">Femenino</option>
                            </select>
                            <span asp-validation-for="Sexo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Especializacion" class="control-label"></label>
                            <select asp-for="Especializacion" class="form-control">
                                <option value="Traumatología Interna">Traumatología Interna</option>
                                <option value="Traumatología Expuesta">Traumatología Expuesta</option>
                                <option value="Ginecología">Ginecología</option>
                                <option value="Cardiología">Cardiología</option>
                                <option value="Neumología">Neumología</option>
                            </select>
                            <span asp-validation-for="Especializacion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MIngreso" value="Método de ingreso" class="control-label"></label>
                            <select asp-for="MIngreso" class="form-control">
                                <option value="Ambulancia">Ambulancia</option>
                                <option value="Asistido">Asistido</option>
                            </select>
                            <span asp-validation-for="MIngreso" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <br />
                            <input type="submit" value="Completar registro" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <div>
                <div>
                    <a asp-action="Index">Volver a sala de espera</a>
                </div>
            </div>
        </div>
        <br /><br />
    </div>
</body>
